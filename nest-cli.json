{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "assets": [],
    "watchAssets": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true,
          "classValidatorShim": true,
          "controllerFileNameSuffix": [".controller.ts"],
          "dtoFileNameSuffix": [
            ".viewmodel.ts",
            ".request.ts",
            ".transformer.ts"
          ]
        }
      }
    ]
  }
}
